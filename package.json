{
  "name": "crypthub",
  "version": "1.0.0",
  "description": "A local-first, encrypted password manager built with Electron & SQLite. Your vault never leaves your machine.",
  "main": "src/main.js",
  "author": {
    "name": "srsdesigndev",
    "url": "https://github.com/srsdesigndev"
  },
  "homepage": "https://github.com/srsdesigndev/crypthub",
  "repository": {
    "type": "git",
    "url": "https://github.com/srsdesigndev/crypthub.git"
  },
  "bugs": {
    "url": "https://github.com/srsdesigndev/crypthub/issues"
  },
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "dist:mac":   "electron-builder --mac",
    "dist:win":   "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:all":   "electron-builder --mac --win --linux"
  },
  "build": {
    "appId": "com.srsdesigndev.crypthub",
    "productName": "CryptHub",
    "copyright": "Copyright Â© 2026 srsdesigndev",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        { "target": "dmg", "arch": ["arm64", "x64"] }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64"] }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "CryptHub",
      "window": { "width": 540, "height": 380 }
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3"
  }
}